Creating Objects :
package CarStudy;
class Car{
	String name;
	String color;
	int No_plate;
	char model;
}
public class CarStudy {

	public static void main(String[] args) {
		Car s = new Car();
		s.name="polo";
		s.color="red";
		s.No_plate=1234;
		s.model='A';
		System.out.println(s.name);
		System.out.println(s.color);
		System.out.println(s.No_plate);
		System.out.println(s.model);
	}

}



Control Flow :


package ResultChecker;
class Student{
	String name;
	int marks;
	void result(){
		if(marks>40) {
			System.out.println("pass");
		}
		else {
			System.out.println("Fail");
		}
	}
}
public class Result {

	public static void main(String[] args) {
		Student s1=new Student();
		s1.name="abhi";
		s1.marks=98;
		Student s2=new Student();
		s2.name=null;
		s2.marks=39;
		s1.result();
		s2.result();
		

	}

}


